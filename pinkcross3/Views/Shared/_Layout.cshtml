<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - pinkcross3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">pinkcross</a>
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <a asp-controller="Home" asp-action="Privacy">Privacy</a>
                        <a asp-controller="Home" asp-action="About">About</a>
                        <a asp-controller="Home" asp-action="Question">FAQ</a>
                        <a asp-controller="Home" asp-action="Feedback">Feedback</a>
                        @if (User.IsInRole("Staff"))
                        {
                            <a asp-controller="DonorProfile" asp-action="Index">Donor Profile</a>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Admin" asp-action="Index">New Account</a>
                        }
                        @if (User.IsInRole("Staff"))
                        {
                            <a asp-controller="DonationRecord" asp-action="Index">Donation Record</a>
                        }
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a asp-controller="User" asp-action="Login">Login</a> 
                    </li>
                    <li>
                       @if (User.Identity.IsAuthenticated)
                       {
                          <a>| Welcome @User.Identity.Name</a>
                          <a asp-controller="User" asp-action="Logoff" asp-route-returnUrl="pinkcross3">Logout</a>
                        }
                    </li>
                   </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - pinkcross3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>