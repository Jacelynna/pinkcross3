@model User
    <form asp-controller="Admin" asp-action="Create" method="post">
        <h2 class="form-signin-heading">New Account</h2>
        <div class="col-5">
            <div class="col-5">
                <div class="form-group row">
                    <label asp-for="Username_id" class="control-label">Username: </label>
                    <input asp-for="Username_id" class="form-control" placeholder="Username_id" />
                    <span asp-validation-for="Username_id" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="control-label">Password: </label>
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Role" class="control-label">Role: </label>
                    <div class="col-6">
                        <div class="form-check form-check-inline">
                            <input type="radio" class="form-check-input" id="Staff" name="Role" value="Staff" />
                            <label class="form-check-label" for="Staff">Staff</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input type="radio" class="form-check-input" id="Admin" name="Role" value="Admin" />
                            <label class="form-check-label" for="Admin">Admin</label>
                        </div>
                    </div>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            </div>
            @if (ViewData["Message"] != null)
            {

                <div class="form-group row">
                    <div class="alert alert-@ViewData["MsgType"]">
                        @ViewData["Message"]
                    </div>
                </div>
            }
        </div>
        <div class="col-2">
            <div class="form-group row">
                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Create" />
            </div>
        </div>
    </form>
