@model DonationRecord

<form asp-controller="DonationRecord" asp-action="Create" method="post">
    <h2 class="form-signin-heading">Donation Record</h2>
    <div class="col-5">
        <div class="form-group row">
            <label asp-for="DonationRecord_id" class="control-label">Donation Record ID: </label>
            <input asp-for="DonationRecord_id" class="form-control" placeholder="Donation Record id" />
            <p><span style="color :slateblue ;">*Required</span>  </p>
            <span asp-validation-for="DonationRecord_id" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="DateOfDonation" class="control-label">Date of Donation: </label>
            <input asp-for="DateOfDonation" class="form-control" placeholder="DD-MM-YYYY" type="text"/>
            <p><span style="color : slateblue ;">*Required</span>  </p>
            <span asp-validation-for="DateOfDonation" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="ModeOfDonation" class="control-label">Mode of donation: </label>
            <input asp-for="ModeOfDonation" class="form-control" placeholder="Mode of Donation" />
            <p><span style="color : slateblue ;">*Required</span>  </p>
            <p><span style="color : slateblue ;"> Enter NA if you are an donating as an individual</span>  </p>
            <span asp-validation-for="ModeOfDonation" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="DonationAmount" class="control-label">Amount : </label>
            <input asp-for="DonationAmount" class="form-control" placeholder="Amount of Donation" />
            <p><span style="color : slateblue ;">*Required</span>  </p>
            <span asp-validation-for="DonationAmount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="PurposeOfDonation" class="control-label">Purpose: </label>
            <input asp-for="PurposeOfDonation" class="form-control" placeholder="Purpose of Donation" />
            <p><span style="color : slateblue ;">*Required</span>  </p>
            <span asp-validation-for="PurposeOfDonation" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="DonorType" class="control-label">Donor Type: </label>
            <select id="DonorType" name="DonorType" class="form-control dropdown">
                <option value="">--Select One--</option>
                <option value="Individual">Individual</option>
                <option value="Company">Company</option>
                <option value="Others">Others</option>
            </select>
        </div>
        <div class="form-group row">
            <label asp-for="CompanyName" class="control-label">Company Name: </label>
            <input asp-for="CompanyName" class="form-control" placeholder="Company Name" />
            <p><span style="color : slateblue ;">*Required</span>  </p>
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="ReceiptNumber" class="control-label">Receipt Number: </label>
            <input asp-for="ReceiptNumber" class="form-control" placeholder="Receipt Number" />
            <p><span style="color : slateblue ;">*Required</span>  </p>
            <span asp-validation-for="ReceiptNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="DateOfReceipt" class="control-label">Date of Receipt: </label>
            <input asp-for="DateOfReceipt" class="form-control" placeholder="DD-MM-YYYY" type="text"/>
            <p><span style="color : slateblue ;">*Required</span>  </p>
            <span asp-validation-for="DateOfReceipt" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for=" TaxExemptionStatus" class="control-label">tax exemption status: </label>
            <select id="TaxExemptionStatus" name="TaxExemptionStatus" class="form-control dropdown">
                <option value="">--Select One--</option>
                <option value="Individual">Confirmed</option>
                <option value="Company">Not Confirmed</option>
            </select>
        </div>
    </div>
        

        @if (ViewData["Message"] != null)
         {

         <div class="form-group row">
            <div class="alert alert-@ViewData["MsgType"]">
               @ViewData["Message"]
            </div>
         </div>
            }
        <div class="col-4">
            <div class="form-group row">
                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Create" />
            </div>
        </div>
</form>