@model User
<form asp-controller="User" asp-action="Register" method="post" >
<h2 class="form-signin-heading">Register your username ID and password</h2>
<div class="col-5">
    <div class="form-group row">
        <label asp-for="Username_id" class="control-label">Username: </label>
        <input asp-for="Username_id" class="form-control" placeholder="Username ID" />
        <p><span style="color :slateblue ;">*Required</span>  </p>
        <span asp-validation-for="Username_id" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="control-label">Password: </label>
        <input asp-for="Password" class="form-control" placeholder="Password" />
        <p><span style="color :slateblue ;">*Required</span>  </p>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    @if (ViewData["Message"] != null)
    {

        <div class="form-group row">
            <div class="alert alert-@ViewData["MsgType"]">
                @ViewData["Message"]
            </div>
        </div>
    }
</div>
<div class="col-2">
    <div class="form-group row">
        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Next Step" />
    </div>
</div>
</form>