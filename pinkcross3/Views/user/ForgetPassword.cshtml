@model ForgetPassword
@{ 
    ViewData["Title"] = "Forget Password";
}
    <form asp-controller="User" asp-action="ForgetPassword" method="post">
        <div class="col-5">
            <div class="form-group row">
                <label asp-for="NewPassword" class="control-label">New Password: </label>
                <input asp-for="NewPassword" class="form-control" placeholder="new password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ConfirmPassword" class="control-label">Confirm Password: </label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="confirm password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <input type="submit" class="btn btn-lg btn-primary btn-block" value="confirm" />
            </div>
            @if (ViewData["Message"] != null)
            {
                <div class="form-group row">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <text>@ViewData["Message"]</text>
                    </div>
                </div>
            }
        </div>
    </form>
