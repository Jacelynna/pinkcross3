@model DonorProfile

<form asp-controller="DonorProfile" asp-action="Edit" method="post" >
<h2 class="form-signin-heading">Donor Profile</h2>
<div class="col-5">
    <div class="form-group row">
        <label asp-for="DonorName" class="control-label">Name: </label>
        <input asp-for="DonorName" class="form-control"/>
        <span asp-validation-for="DonorName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Donornric" class="control-label">NRIC: </label>
        <input asp-for="Donornric" class="form-control"/>
        <span asp-validation-for="Donornric" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="CompanyName" class="control-label">Company Name: </label>
        <input asp-for="CompanyName" class="form-control"/>
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="DonorNumber" class="control-label">Number: </label>
        <input asp-for="DonorNumber" class="form-control"/>
        <span asp-validation-for="DonorNumber" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="DonorAddress" class="control-label">Address: </label>
        <input asp-for="DonorAddress" class="form-control"/>
        <span asp-validation-for="DonorAddress" class="text-danger"></span>
    </div>
    @if (ViewData["Message"] != null)
    {

        <div class="form-group row">
            <div class="alert alert-@ViewData["MsgType"]">
                @ViewData["Message"]
            </div>
        </div>
    }
    <div class="col-2">
        <div class="form-group row">
            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Save" />
        </div>
    </div>
    <div>
        <a asp-page="/Index">Back to List</a>
    </div>
</div>
    </form>
 
